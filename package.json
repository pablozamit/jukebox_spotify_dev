{
  "name": "bar-jukebox",
  "version": "1.0.0",
  "description": "Aplicaci√≥n interactiva que permite a los clientes de un bar elegir canciones de Spotify",
  "author": "Bar Jukebox Team",
  "main": "electron/main.js",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 9002 --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "start:electron": "electron . --no-sandbox",
    "lint": "next lint",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder --win",
    "electron:dist:all": "npm run build && electron-builder --win --x64 --ia32",
    "dist:win": "npm run electron:dist"
  },
  "build": {
    "appId": "com.example.barjukebox",
    "productName": "Bar Jukebox",
    "files": [
      "electron/main.js",
      "out/**/*",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "runAfterFinish": true,
        "createDesktopShortcut": true,
        "installerIcon": "build/installerIcon.ico",
        "shortcutName": "Bar Jukebox",
        "artifactName": "${productName}-Setup-${version}.${ext}",
        "perMachine": false,
        "include": "build/installer.nsh"
      }
    }
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.0.4",
    "@genkit-ai/next": "^1.0.4",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-query": "^5.66.0",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "electron-log": "^5.4.0",
    "electron-store": "^10.0.1",
    "geist": "^1.3.0",
    "genkit": "^1.0.4",
    "lucide-react": "^0.475.0",
    "next": "^15.3.1",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "spotify-web-api-node": "^5.0.2",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8",
    "eslint-config-next": "15.3.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.barjukebox.app",
    "productName": "Bar Jukebox",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bar Jukebox"
    }
  }
}
